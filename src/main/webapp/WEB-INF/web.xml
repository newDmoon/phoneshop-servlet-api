<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Phoneshop servlet api training</display-name>

    <context-param>
        <param-name>insertDemoData</param-name>
        <param-value>true</param-value>
    </context-param>

    <listener>
        <listener-class>com.es.phoneshop.web.DemoDataServletContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>productList</servlet-name>
        <servlet-class>com.es.phoneshop.web.ProductListPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productList</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>product</servlet-name>
        <servlet-class>com.es.phoneshop.web.ProductDetailsPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>product</servlet-name>
        <url-pattern>/products/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>priceHistory</servlet-name>
        <servlet-class>com.es.phoneshop.web.ProductPriceHistoryPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>priceHistory</servlet-name>
        <url-pattern>/products/priceHistory/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Cart</servlet-name>
        <servlet-class>com.es.phoneshop.web.CartPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteCartItem</servlet-name>
        <servlet-class>com.es.phoneshop.web.DeleteCartItemServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteCartItem</servlet-name>
        <url-pattern>/cart/deleteCartItem/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>miniCart</servlet-name>
        <servlet-class>com.es.phoneshop.web.MiniCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>miniCart</servlet-name>
        <url-pattern>/cart/minicart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>advancedSearch</servlet-name>
        <servlet-class>com.es.phoneshop.web.AdvancedSearchPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>advancedSearch</servlet-name>
        <url-pattern>/advancedSearch</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>checkout</servlet-name>
        <servlet-class>com.es.phoneshop.web.CheckoutPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>checkout</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orderOverview</servlet-name>
        <servlet-class>com.es.phoneshop.web.OrderOverviewPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>orderOverview</servlet-name>
        <url-pattern>/order/overview/*</url-pattern>
    </servlet-mapping>

    <error-page>
        <location>/WEB-INF/pages/error/errorProductNotFound.jsp</location>
        <exception-type>java.util.NoSuchElementException</exception-type>
    </error-page>

    <error-page>
        <location>/WEB-INF/pages/error/errorStatus500.jsp</location>
        <error-code>500</error-code>
    </error-page>

    <error-page>
        <location>/WEB-INF/pages/error/errorStatus404.jsp</location>
        <error-code>404</error-code>
    </error-page>

    <error-page>
        <exception-type>com.es.phoneshop.exception.OrderNotFoundException</exception-type>
        <location>/WEB-INF/pages/error/errorOrderNotFound.jsp</location>
    </error-page>

    <filter>
        <filter-name>dosFilter</filter-name>
        <filter-class>com.es.phoneshop.web.DosFilterServlet</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>dosFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>